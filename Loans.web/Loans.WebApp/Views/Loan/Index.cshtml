@using Loans.WebApp.Models

@model List<Loan>

<h2>Loans list</h2>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>IdClient</td>
            <td>Amount request</td>
            <td>APR</td>
            <td>Late Loans</td>
            <td>Loan Date</td>
            <td>Outstanding debt</td>
            <td>Payment months</td>
            <td>Rating</td>
            <td>Risk</td>
            <td colspan="2"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ClientId</td>
                <td>@item.AmountRequest.ToString("c")</td>
                <td>@item.APR</td>
                <td>@item.LateLoans</td>
                <td>@item.LoanDate.ToShortDateString()</td>
                <td>@item.OutstandingDebt.ToString("c")</td>
                <td>@item.QtyMonthsPayment</td>
                <td>@item.Rating</td>
                <td>@item.Risk.ToString("0.00")</td>

                <td>@Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Loan")</td>
                <td>@Html.ActionLink(linkText: "Delete", 
                                     actionName: "DeleteLoan",
                                     controllerName: "Loan",
                                     routeValues: new {id = item.Id},
                                     htmlAttributes:new {onClick = "return confirm('Are you dure?');"})</td>
            </tr>
        }
    </tbody>
</table>