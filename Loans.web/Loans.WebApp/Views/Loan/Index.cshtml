@using Loans.WebApp.Models

@model List<Loan>

<h2>Loans list</h2>
<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td><Country/td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AmountRequest</td>
                <td>@item.APR</td>
                <td>@item.ClientId</td>
                <td>@item.LateLoans</td>
                <td>@item.LoanDate</td>
                <td>@item.OutstandingDebt</td>
                <td>@item.QtyMonthsPayment</td>
                <td>@item.Rating</td>
                <td>@item.Risk</td>
                <td>@Html.ActionLink(linkText: item.Id.ToString(), actionName: "Delete", controllerName: "Loan")</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
