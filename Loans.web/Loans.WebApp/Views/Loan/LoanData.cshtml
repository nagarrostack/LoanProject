@using Loans.WebApp.Models

@model FullEditLoan

<h2>Loan</h2>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

@using (Html.BeginForm("PostLoanData", "Loan", FormMethod.Post))
{
    @Html.HiddenFor(m => m.LoanInfo.ClientId)
    @Html.HiddenFor(m => m.LoanInfo.Id)

    @Html.Label("Amoubt requested:")
    @Html.TextBoxFor(m => m.LoanInfo.AmountRequest)
    <span asp-validation-for="LoanInfo.AmountRequest" class="text-danger"></span>
    <br />

    @Html.Label("APR:")
    @Html.TextBoxFor(m => m.LoanInfo.APR)
    <span asp-validation-for="LoanInfo.APR" class="text-danger"></span>
    <br />

    @Html.Label("Loan Date")
    @Html.TextBoxFor(m => m.LoanInfo.LoanDate)
    <span asp-validation-for="LoanInfo.LoanDate" class="text-danger"></span>
    <br />

    @Html.Label("Outstanding debt:")
    @Html.TextBoxFor(m => m.LoanInfo.OutstandingDebt)
    <span asp-validation-for="LoanInfo.OutstandingDebt" class="text-danger"></span>
    <br />

    @Html.Label("Quantity of months to pay:")
    @Html.TextBoxFor(m => m.LoanInfo.QtyMonthsPayment)
    <span asp-validation-for="LoanInfo.QtyMonthsPayment" class="text-danger"></span>
    <br />

    @Html.Label("Rating:")
    @Html.TextBoxFor(m => m.LoanInfo.Rating)
    <span asp-validation-for="LoanInfo.Rating" class="text-danger"></span>
    <br />

    @Html.Label("Risk:")
    @Html.TextBoxFor(m => m.LoanInfo.Risk)
    <span asp-validation-for="LoanInfo.Risk" class="text-danger"></span>
    <br />

    @Html.HiddenFor(m => m.ClientInfo.CountryId)
    @Html.HiddenFor(m => m.ClientInfo.GenderId)
    @Html.HiddenFor(m => m.ClientInfo.Id)
    @Html.HiddenFor(m => m.ClientInfo.LastName)
    @Html.HiddenFor(m => m.ClientInfo.MidName)
    @Html.HiddenFor(m => m.ClientInfo.Name)
    @Html.HiddenFor(m => m.ClientInfo.TitleId)

    @Html.HiddenFor(m => m.BusinessInfo.Address)
    @Html.HiddenFor(m => m.BusinessInfo.ClientId)
    @Html.HiddenFor(m => m.BusinessInfo.Id)
    @Html.HiddenFor(m => m.BusinessInfo.Name)
    @Html.HiddenFor(m => m.BusinessInfo.PhoneNumber)
    @Html.HiddenFor(m => m.BusinessInfo.TaxId)

    <input type="submit" value="Continue">
}
@using (Html.BeginForm("PostClientInfo", "Loan", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ClientInfo.CountryId)
    @Html.HiddenFor(m => m.ClientInfo.GenderId)
    @Html.HiddenFor(m => m.ClientInfo.Id)
    @Html.HiddenFor(m => m.ClientInfo.LastName)
    @Html.HiddenFor(m => m.ClientInfo.MidName)
    @Html.HiddenFor(m => m.ClientInfo.Name)
    @Html.HiddenFor(m => m.ClientInfo.TitleId)

    @Html.HiddenFor(m => m.BusinessInfo.Address)
    @Html.HiddenFor(m => m.BusinessInfo.ClientId)
    @Html.HiddenFor(m => m.BusinessInfo.Id)
    @Html.HiddenFor(m => m.BusinessInfo.Name)
    @Html.HiddenFor(m => m.BusinessInfo.PhoneNumber)
    @Html.HiddenFor(m => m.BusinessInfo.TaxId)

    @Html.HiddenFor(m => m.LoanInfo.AmountRequest)
    @Html.HiddenFor(m => m.LoanInfo.APR)
    @Html.HiddenFor(m => m.LoanInfo.ClientId)
    @Html.HiddenFor(m => m.LoanInfo.Id)
    @Html.HiddenFor(m => m.LoanInfo.LateLoans)
    @Html.HiddenFor(m => m.LoanInfo.LoanDate)
    @Html.HiddenFor(m => m.LoanInfo.OutstandingDebt)
    @Html.HiddenFor(m => m.LoanInfo.QtyMonthsPayment)
    @Html.HiddenFor(m => m.LoanInfo.Rating)
    @Html.HiddenFor(m => m.LoanInfo.Risk)
    <input type="submit" value="Back">
}