@using Loans.WebApp.Models

@model FullEditLoan

<h2>Loan</h2>
@section scripts{
<partial name="_ValidationScriptsPartial" />
}

@using (Html.BeginForm("PostBusinessData", "Loan", FormMethod.Post))
{
    @Html.HiddenFor(m => m.BusinessInfo.Id)
    @Html.HiddenFor(m => m.BusinessInfo.ClientId)
    <div class="row">
        <div class="col-sm-2">
            @Html.Label("Business' name:")
        </div>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.BusinessInfo.Name)
        </div>
        <div class="col-sm-2">
            @Html.Label("Address:")
        </div>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.BusinessInfo.Address)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <span asp-validation-for="BusinessInfo.Name" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <span asp-validation-for="BusinessInfo.Address" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            @Html.Label("Phone number:")
        </div>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.BusinessInfo.PhoneNumber)
        </div>
        <div class="col-sm-2">
            @Html.Label("Tax Id:")
        </div>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.BusinessInfo.TaxId)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <span asp-validation-for="BusinessInfo.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <span asp-validation-for="BusinessInfo.TaxId" class="text-danger"></span>
        </div>
    </div>


    @Html.HiddenFor(m => m.ClientInfo.CountryId)
    @Html.HiddenFor(m => m.ClientInfo.GenderId)
    @Html.HiddenFor(m => m.ClientInfo.Id)
    @Html.HiddenFor(m => m.ClientInfo.LastName)
    @Html.HiddenFor(m => m.ClientInfo.MidName)
    @Html.HiddenFor(m => m.ClientInfo.Name)
    @Html.HiddenFor(m => m.ClientInfo.TitleId)

    @Html.HiddenFor(m => m.LoanInfo.AmountRequest)
    @Html.HiddenFor(m => m.LoanInfo.APR)
    @Html.HiddenFor(m => m.LoanInfo.ClientId)
    @Html.HiddenFor(m => m.LoanInfo.Id)
    @Html.HiddenFor(m => m.LoanInfo.LateLoans)
    @Html.HiddenFor(m => m.LoanInfo.LoanDate)
    @Html.HiddenFor(m => m.LoanInfo.OutstandingDebt)
    @Html.HiddenFor(m => m.LoanInfo.QtyMonthsPayment)
    @Html.HiddenFor(m => m.LoanInfo.Rating)
    @Html.HiddenFor(m => m.LoanInfo.Risk)

    <input type="submit" value="Continue" class="btn btn-outline-primary">
}

